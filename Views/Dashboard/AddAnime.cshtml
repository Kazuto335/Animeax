@{
    //Layout = null;
}

@model AAnime


<form method="post">
    <div class="border p-3 mt-4">
    <div class="row pb-2">
        <h2 class="text-primary">ADD ANIME</h2>
        <hr/>
    </div>
    <div class="mb-3 row p-1">
        <label asp-for="Name" class="p-0"></label>
        <input asp-for="Name" class="form-control" placeholder="Name" />
       <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input asp-for="Extra" class="form-control" placeholder="Extra" />
            <span asp-validation-for="Extra" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input asp-for="Genres" class="form-control" placeholder="Genres" />
            <span asp-validation-for="Genres" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input asp-for="Description" class="form-control" placeholder="Description" />
            <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input asp-for="Rating" class="form-control" placeholder="Rating" />
            <span asp-validation-for="Rating" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input asp-for="Score" class="form-control" placeholder="Score" />
            <span asp-validation-for="Score" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input asp-for="Aired" class="form-control" placeholder="Aired" />
            <span asp-validation-for="Aired" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input asp-for="OName" class="form-control" placeholder="Other Name" />
            <span asp-validation-for="OName" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input asp-for="Type" class="form-control" placeholder="Type" />
            <span asp-validation-for="Type" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input asp-for="ImgURL" class="form-control" placeholder="Image Url" />
            <span asp-validation-for="ImgURL" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <input asp-for="Status" class="form-control" placeholder="Status" />
            <span asp-validation-for="Status" class="text-danger"></span>
    </div>
    
    
    
    <button type="submit" class="btn btn-primary" style="width:150px">ADD</button>
    <a asp-controller="Dashboard" asp-action="AddAnime"></a>
    </div>
</form>

        @section Scripts{
            @{
                <partial name="_ValidationScriptsPartial"/>
            }
        }